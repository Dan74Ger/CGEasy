<Window x:Class="CGEasy.App.Views.FinanziamentoImportDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuovo Finanziamento Import"
        Height="650"
        Width="750"
        WindowStartupLocation="CenterOwner"
        Background="White"
        ResizeMode="CanResize"
        MinWidth="700"
        MinHeight="600">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ’° Nuovo Finanziamento Import"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2C3E50"/>
            <TextBlock Text="Gestione finanziamento per pagamento fatture estere"
                       FontSize="14"
                       Foreground="#7F8C8D"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Nome Finanziamento -->
                <TextBlock Text="Nome Finanziamento *" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                <TextBox Text="{Binding NomeFinanziamento, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1"
                         Margin="0,0,0,15"
                         FontSize="14"/>

                <!-- Date -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Data Inizio *" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding DataInizio}"
                                    Padding="8"
                                    BorderBrush="#BDC3C7"
                                    BorderThickness="1"
                                    FontSize="14"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Data Fine *" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding DataFine}"
                                    Padding="8"
                                    BorderBrush="#BDC3C7"
                                    BorderThickness="1"
                                    FontSize="14"/>
                    </StackPanel>
                </Grid>

                <!-- Importo -->
                <TextBlock Text="Importo Finanziamento (â‚¬) *" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Importo, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1"
                         Margin="0,0,0,20"
                         FontSize="14"/>

                <!-- Separatore -->
                <Separator Margin="0,10,0,20"/>

                <!-- Sezione Dati Fattura -->
                <TextBlock Text="ðŸ“„ Dati Fattura (opzionali)"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,15"/>

                <!-- Nome Fornitore -->
                <TextBlock Text="Nome Fornitore" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                <TextBox Text="{Binding NomeFornitore, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1"
                         Margin="0,0,0,15"
                         FontSize="14"/>

                <!-- Numero Fattura e Data -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Numero Fattura" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NumeroFattura, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="1"
                                 FontSize="14"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Data Fattura" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding DataFattura}"
                                    Padding="8"
                                    BorderBrush="#BDC3C7"
                                    BorderThickness="1"
                                    FontSize="14"/>
                    </StackPanel>
                </Grid>

                <!-- Note info -->
                <Border Background="#ECF0F1"
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ Cosa succede quando salvi:"
                                   FontWeight="SemiBold"
                                   FontSize="13"
                                   Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap"
                                   FontSize="12"
                                   Foreground="#7F8C8D">
                            <Run Text="âœ… VerrÃ  creato un"/>
                            <Run Text="INCASSO" FontWeight="Bold"/>
                            <Run Text="alla data inizio (accensione finanziamento)"/>
                            <LineBreak/>
                            <Run Text="âœ… VerrÃ  creato un"/>
                            <Run Text="PAGAMENTO" FontWeight="Bold"/>
                            <Run Text="alla data fine (chiusura finanziamento)"/>
                            <LineBreak/>
                            <Run Text="âœ… Il saldo previsto e il margine di tesoreria verranno aggiornati automaticamente"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="âŒ ANNULLA"
                    Command="{Binding AnnullaCommand}"
                    Width="120"
                    Height="40"
                    Margin="0,0,10,0"
                    Background="#95A5A6"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button Content="âœ… SALVA"
                    Command="{Binding SalvaCommand}"
                    Width="120"
                    Height="40"
                    Background="#27AE60"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>

