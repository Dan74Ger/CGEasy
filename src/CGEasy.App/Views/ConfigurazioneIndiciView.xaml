<UserControl x:Class="CGEasy.App.Views.ConfigurazioneIndiciView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#F5F5F5">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#FF9800"
                CornerRadius="12"
                Padding="25"
                Margin="0,0,0,20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="âš™ï¸" FontSize="42" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="CONFIGURAZIONE INDICI PERSONALIZZATI" FontSize="28" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Crea indici custom combinando voci CE e SP" FontSize="14" Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
                <TextBlock Text="{Binding InfoCliente}"
                           Foreground="White" 
                           Opacity="0.95"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="12"
                Padding="20"
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Filtra per categoria:" 
                               FontSize="13" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding Categorie}"
                              SelectedItem="{Binding CategoriaSelezionata}"
                              Width="150"
                              Padding="10,6"
                              FontSize="13"
                              Margin="0,0,20,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ”„ Aggiorna"
                            Command="{Binding AggiornaListaCommand}"
                            Padding="15,8"
                            Margin="0,0,10,0"
                            FontSize="13"
                            Background="#2196F3"
                            Foreground="White"/>
                    
                    <Button Content="âž• Nuovo Indice"
                            Command="{Binding NuovoIndiceCommand}"
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="15,8"
                            FontSize="14"
                            FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lista Indici -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="12" 
                Padding="20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="ðŸ“‹ Indici Personalizzati" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                    
                    <TextBlock Text="{Binding IndiciPersonalizzati.Count, StringFormat='({0} totali)'}" 
                               FontSize="13" 
                               Foreground="Gray"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding IndiciPersonalizzati}"
                          SelectedItem="{Binding IndiceSelezionato}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#E0E0E0"
                          RowHeight="55">
                    <DataGrid.Columns>
                        <!-- Nome Indice -->
                        <DataGridTextColumn Header="Nome Indice" 
                                            Binding="{Binding NomeIndice}" 
                                            Width="200">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="10,0,0,0"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <!-- Descrizione -->
                        <DataGridTextColumn Header="Descrizione" 
                                            Binding="{Binding Descrizione}" 
                                            Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="10,0,0,0"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="Foreground" Value="Gray"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Operatore -->
                        <DataGridTextColumn Header="Operatore" 
                                            Binding="{Binding Operatore}" 
                                            Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <!-- UnitÃ  -->
                        <DataGridTextColumn Header="UnitÃ " 
                                            Binding="{Binding UnitaMisura}" 
                                            Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="12"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Data Creazione -->
                        <DataGridTextColumn Header="Creato" 
                                            Binding="{Binding DataCreazione, StringFormat=dd/MM/yyyy}" 
                                            Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Foreground" Value="Gray"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <!-- Azioni -->
                        <DataGridTemplateColumn Header="Azioni" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="âœï¸" 
                                                Command="{Binding DataContext.ModificaIndiceCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Modifica"
                                                Margin="0,0,5,0"
                                                Padding="10,5"
                                                FontSize="14"
                                                Background="#2196F3"
                                                Foreground="White"/>
                                        
                                        <Button Content="ðŸ—‘ï¸" 
                                                Command="{Binding DataContext.EliminaIndiceCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Elimina"
                                                Background="#F44336"
                                                Foreground="White"
                                                Padding="10,5"
                                                FontSize="14"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <!-- Style DataGrid -->
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F5F5F5"/>
                            <Setter Property="Foreground" Value="#333"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                        </Style>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F9F9F9"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>

                <!-- Messaggio Vuoto -->
                <StackPanel Grid.Row="1" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Visibility="{Binding IndiciPersonalizzati.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <TextBlock Text="ðŸ“Š" FontSize="64" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock Text="Nessun indice personalizzato" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="Gray" 
                               HorizontalAlignment="Center"
                               Margin="0,15,0,5"/>
                    <TextBlock Text="Clicca 'Nuovo Indice' per crearne uno" 
                               FontSize="14" 
                               Foreground="Gray" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
