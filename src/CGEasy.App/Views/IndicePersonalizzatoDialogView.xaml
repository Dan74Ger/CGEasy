<Window x:Class="CGEasy.App.Views.IndicePersonalizzatoDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Indice Personalizzato"
        Height="900" Width="1400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#FF9800"
                CornerRadius="10"
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ”§" FontSize="36" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <StackPanel>
                    <TextBlock Text="Crea Indice Personalizzato" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Combina voci da Conto Economico e Stato Patrimoniale" 
                               FontSize="13" 
                               Foreground="White" 
                               Opacity="0.9"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Informazioni Base -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Informazioni Base" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Nome Indice:" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NomeIndice, UpdateSourceTrigger=PropertyChanged}" 
                                         Padding="10" 
                                         FontSize="13"
                                         ToolTip="Es: Margine Operativo Personalizzato"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Categoria:" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding Categorie}"
                                          SelectedItem="{Binding CategoriaSelezionata}"
                                          Padding="10"
                                          FontSize="13"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Descrizione (opzionale):" 
                                   FontSize="12" 
                                   FontWeight="SemiBold" 
                                   Margin="0,15,0,5"/>
                        <TextBox Text="{Binding Descrizione, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="60"
                                 Padding="10" 
                                 FontSize="12"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>

                <!-- Numeratore -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="ðŸ”¼ Numeratore" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="(Seleziona le voci da sommare)" 
                                       FontSize="11" 
                                       Foreground="Gray"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Voci disponibili -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Voci Disponibili (CE + SP):" 
                                           FontSize="12" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding FiltroVociNumeratore, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="12"
                                         Margin="0,0,0,5">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                                <VisualBrush.Visual>
                                                                    <TextBlock Text="ðŸ” Cerca voci..." 
                                                                               Foreground="Gray" 
                                                                               Margin="8,0,0,0"/>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <ListBox ItemsSource="{Binding VociDisponibiliFiltrate}"
                                         SelectedItem="{Binding VoceSelezionataNumeratore}"
                                         Height="250"
                                         BorderBrush="#DDDDDD"
                                         BorderThickness="1">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="2">
                                                <TextBlock Text="{Binding Codice}" 
                                                           FontWeight="Bold" 
                                                           Width="100"
                                                           FontSize="10"/>
                                                <TextBlock Text=" - " 
                                                           FontSize="10"
                                                           Foreground="Gray"/>
                                                <TextBlock Text="{Binding Descrizione}" 
                                                           FontSize="10"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <Button Content="âž• Aggiungi al Numeratore"
                                        Command="{Binding AggiungiVoceNumeratoreCommand}"
                                        Padding="8,5"
                                        Margin="0,5,0,0"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        FontSize="12"/>
                            </StackPanel>

                            <!-- Voci selezionate -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Voci Selezionate:" 
                                           FontSize="12" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,5"/>
                                <ListBox ItemsSource="{Binding VociNumeratoreSelezionate}"
                                         SelectedItem="{Binding VoceNumeratoreDaRimuovere}"
                                         Height="280"
                                         BorderBrush="#4CAF50"
                                         BorderThickness="2">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="3">
                                                <TextBlock Text="{Binding Codice}" 
                                                           FontWeight="Bold" 
                                                           FontSize="10"/>
                                                <TextBlock Text="{Binding Descrizione}" 
                                                           FontSize="9"
                                                           Foreground="Gray"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <Button Content="âŒ Rimuovi"
                                        Command="{Binding RimuoviVoceNumeratoreCommand}"
                                        Padding="8,5"
                                        Margin="0,5,0,0"
                                        Background="#F44336"
                                        Foreground="White"
                                        FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Operatore -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="âš™ï¸ Operatore:" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Margin="0,0,15,0"/>
                        <ComboBox ItemsSource="{Binding Operatori}"
                                  SelectedItem="{Binding OperatoreSelezionato}"
                                  Width="200"
                                  Padding="10"
                                  FontSize="14"
                                  FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <!-- Denominatore -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="ðŸ”½ Denominatore" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="(Seleziona le voci da sommare)" 
                                       FontSize="11" 
                                       Foreground="Gray"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Voci disponibili -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Voci Disponibili (CE + SP):" 
                                           FontSize="12" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding FiltroVociDenominatore, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="12"
                                         Margin="0,0,0,5">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                                <VisualBrush.Visual>
                                                                    <TextBlock Text="ðŸ” Cerca voci..." 
                                                                               Foreground="Gray" 
                                                                               Margin="8,0,0,0"/>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <ListBox ItemsSource="{Binding VociDisponibiliFiltrateDenominatore}"
                                         SelectedItem="{Binding VoceSelezionataDenominatore}"
                                         Height="250"
                                         BorderBrush="#DDDDDD"
                                         BorderThickness="1">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="2">
                                                <TextBlock Text="{Binding Codice}" 
                                                           FontWeight="Bold" 
                                                           Width="100"
                                                           FontSize="10"/>
                                                <TextBlock Text=" - " 
                                                           FontSize="10"
                                                           Foreground="Gray"/>
                                                <TextBlock Text="{Binding Descrizione}" 
                                                           FontSize="10"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <Button Content="âž• Aggiungi al Denominatore"
                                        Command="{Binding AggiungiVoceDenominatoreCommand}"
                                        Padding="8,5"
                                        Margin="0,5,0,0"
                                        Background="#2196F3"
                                        Foreground="White"
                                        FontSize="12"/>
                            </StackPanel>

                            <!-- Voci selezionate -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Voci Selezionate:" 
                                           FontSize="12" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,5"/>
                                <ListBox ItemsSource="{Binding VociDenominatoreSelezionate}"
                                         SelectedItem="{Binding VoceDenominatoreDaRimuovere}"
                                         Height="280"
                                         BorderBrush="#2196F3"
                                         BorderThickness="2">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="3">
                                                <TextBlock Text="{Binding Codice}" 
                                                           FontWeight="Bold" 
                                                           FontSize="10"/>
                                                <TextBlock Text="{Binding Descrizione}" 
                                                           FontSize="9"
                                                           Foreground="Gray"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <Button Content="âŒ Rimuovi"
                                        Command="{Binding RimuoviVoceDenominatoreCommand}"
                                        Padding="8,5"
                                        Margin="0,5,0,0"
                                        Background="#F44336"
                                        Foreground="White"
                                        FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Configurazione Risultato -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Configurazione Risultato" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Moltiplicatore:" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding Moltiplicatori}"
                                          SelectedItem="{Binding MoltiplicatoreSelezionato}"
                                          Padding="10"
                                          FontSize="13">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Display}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <TextBlock Text="Esempi: x1 (valore assoluto), x100 (percentuale)" 
                                           FontSize="10" 
                                           Foreground="Gray"
                                           Margin="0,5,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="UnitÃ  di Misura:" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding UnitaMisura}"
                                          SelectedItem="{Binding UnitaMisuraSelezionata}"
                                          IsEditable="True"
                                          Padding="10"
                                          FontSize="13"/>
                                <TextBlock Text="Esempi: %, â‚¬, giorni, volte" 
                                           FontSize="10" 
                                           Foreground="Gray"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Anteprima Formula -->
                <Border Background="#E3F2FD" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="0,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Anteprima Formula" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding FormulaAnteprima}" 
                                   FontSize="13"
                                   TextWrapping="Wrap"
                                   Foreground="#0D47A1"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="0,15,0,0"
                Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="âŒ Annulla"
                        Click="Annulla_Click"
                        Padding="20,10"
                        Margin="0,0,10,0"
                        FontSize="14"
                        Background="#9E9E9E"
                        Foreground="White"/>
                <Button Content="ðŸ’¾ Salva Indice"
                        Command="{Binding SalvaCommand}"
                        Padding="20,10"
                        FontSize="14"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

