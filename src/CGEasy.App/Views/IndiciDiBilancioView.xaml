<UserControl x:Class="CGEasy.App.Views.IndiciDiBilancioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#FFB300"
                CornerRadius="12"
                Padding="30"
                Margin="0,0,0,30">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="üìê" FontSize="48" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <StackPanel>
                        <TextBlock Text="INDICI DI BILANCIO" FontSize="32" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Analisi economico-finanziaria avanzata" FontSize="16" Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
                <TextBlock Foreground="White" 
                           Opacity="0.85"
                           TextWrapping="Wrap"
                           FontSize="13"
                           LineHeight="22">
                    Calcola automaticamente indici di liquidit√†, solidit√†, redditivit√† ed efficienza combinando dati CE e SP.
                    Valuta la salute economica e finanziaria dell'azienda.
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Sezione Selezione Dati -->
        <Border Grid.Row="1" 
                Background="White"
                CornerRadius="12"
                Padding="25"
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Titolo Sezione -->
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                           Text="üéØ Selezione Dati"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,20"/>

                <!-- Cliente -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,0">
                    <TextBlock Text="üè¢ Cliente" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="13"/>
                    <ComboBox ItemsSource="{Binding Clienti}"
                              SelectedItem="{Binding ClienteSelezionato}"
                              DisplayMemberPath="NomeCliente"
                              FontSize="13"
                              Padding="12,10"/>
                </StackPanel>

                <!-- Statistica CE -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,15,0">
                    <TextBlock Text="üìä Statistica CE" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="13"/>
                    <ComboBox ItemsSource="{Binding StatisticheCEDisponibili}"
                              SelectedItem="{Binding StatisticaCESelezionata}"
                              DisplayMemberPath="NomeStatistica"
                              FontSize="13"
                              Padding="12,10"
                              IsEnabled="{Binding ClienteSelezionato, Converter={StaticResource NullToBooleanConverter}}"/>
                </StackPanel>

                <!-- Statistica SP -->
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,15,0">
                    <TextBlock Text="üìä Statistica SP" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="13"/>
                    <ComboBox ItemsSource="{Binding StatisticheSPDisponibili}"
                              SelectedItem="{Binding StatisticaSPSelezionata}"
                              DisplayMemberPath="NomeStatistica"
                              FontSize="13"
                              Padding="12,10"
                              IsEnabled="{Binding ClienteSelezionato, Converter={StaticResource NullToBooleanConverter}}"/>
                </StackPanel>
                
                <!-- Sezione Selezione Indici -->
                <Border Grid.Row="1" Grid.Column="3"
                        Background="White"
                        CornerRadius="10"
                        Padding="15"
                        Margin="15,0,0,0"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        VerticalAlignment="Top">
                    <StackPanel>
                        <TextBlock Text="üìã Seleziona Indici da Calcolare" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Margin="0,0,0,10"/>
                        
                        <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding IndiciDisponibili}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding NomeIndice}"
                                                  IsChecked="{Binding IsSelezionato, UpdateSourceTrigger=PropertyChanged}"
                                                  Margin="0,2"
                                                  FontSize="11"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="‚òë Tutti"
                                    Command="{Binding SelezionaTuttiIndiciCommand}"
                                    Padding="8,4"
                                    FontSize="11"
                                    Margin="0,0,5,0"/>
                            <Button Content="‚òê Nessuno"
                                    Command="{Binding DeselezionaTuttiIndiciCommand}"
                                    Padding="8,4"
                                    FontSize="11"/>
                        </StackPanel>
                        
                        <Separator Margin="0,8"/>
                        
                        <!-- Pulsanti in ORIZZONTALE -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <Button Content="üìä Calcola"
                                    Command="{Binding CalcolaIndiciCommand}"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Padding="10,6"
                                    Margin="0,0,5,0"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    HorizontalAlignment="Stretch"
                                    Width="90">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="6"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#45A049"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="üì• Excel"
                                    Command="{Binding EsportaExcelCommand}"
                                    Background="#2196F3"
                                    Foreground="White"
                                    FontSize="11"
                                    Padding="10,6"
                                    Margin="0,0,5,0"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Width="70">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="6"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1976D2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="‚öôÔ∏è Config"
                                    Command="{Binding ApriConfigurazioneCommand}"
                                    Background="#FF9800"
                                    Foreground="White"
                                    FontSize="11"
                                    Padding="10,6"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Width="70">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="6"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F57C00"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Messaggio Info -->
                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4"
                        Background="#E3F2FD"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,20,0,0">
                    <TextBlock Text="{Binding MessaggioInfo}"
                               FontSize="13"
                               Foreground="#1976D2"
                               TextWrapping="Wrap"/>
                </Border>
            </Grid>
        </Border>

        <!-- Tabella Indici -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="12"
                Padding="25">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Tabella -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="üìà Indici Calcolati"
                               FontSize="18"
                               FontWeight="SemiBold"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Filtra per categoria:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   FontSize="13"/>
                        <ComboBox ItemsSource="{Binding CategorieIndici}"
                                  SelectedItem="{Binding CategoriaSelezionata}"
                                  Width="150"
                                  FontSize="13"
                                  Padding="10,6"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid Indici -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding IndiciCalcolati}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          AlternatingRowBackground="#F5F5F5"
                          RowHeight="45"
                          FontSize="13">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Categoria" 
                                            Binding="{Binding Categoria}"
                                            Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="10,0,0,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Nome Indice" 
                                            Binding="{Binding NomeIndice}"
                                            Width="200">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="10,0,0,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Formula" 
                                            Binding="{Binding Formula}"
                                            Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Setter Property="FontStyle" Value="Italic"/>
                                    <Setter Property="Margin" Value="10,0,0,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Valore" 
                                            Binding="{Binding ValoreFormattato}"
                                            Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#2196F3"/>
                                    <Setter Property="TextAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="0,0,15,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>

                    <DataGrid.Style>
                        <Style TargetType="DataGrid">
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        </Style>
                    </DataGrid.Style>
                </DataGrid>

                <!-- Messaggio Vuoto -->
                <StackPanel Grid.Row="1" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Visibility="{Binding IndiciCalcolati.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <TextBlock Text="üìä" FontSize="64" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock Text="Nessun indice calcolato" 
                               FontSize="16" 
                               Foreground="Gray" 
                               HorizontalAlignment="Center"
                               Margin="0,15,0,5"/>
                    <TextBlock Text="Seleziona Cliente e Statistiche, poi premi 'Calcola Indici'" 
                               FontSize="13" 
                               Foreground="Gray" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>

